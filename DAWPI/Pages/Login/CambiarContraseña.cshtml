@page
@model DAWPI.Pages.Login.CambiarContraseñaModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<style>
    /* Estilos para el formulario */
    form {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
        border: 1px solid #ccc;
        padding: 32px;
        border-radius: 4px;
        max-width: 400px;
        margin: 0 auto;
        background-color: #f8f9fa;
    }

    fieldset {
        border: none;
    }

    legend {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 16px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 4px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 12px;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f8f9fa;
    }

        input[type="text"]:focus,
        input[type="password"]:focus {
            outline: none;
            border-color: #007bff;
        }

    .submit {
        padding: 12px 24px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit:hover {
            background-color: #0056b3;
        }

    hr {
        width: 100%;
        border: none;
        border-top: 1px solid #ccc;
        margin-top: 24px;
        margin-bottom: 16px;
    }

    p {
        color: red;
        margin-top: 4px;
    }

    /* Estilos adicionales para consulta médica */
    body {
        background-color: #f3f3f3;
        font-family: Arial, sans-serif;
    }

    legend {
        color: #007bff;
    }

    label {
        color: #007bff;
    }

    .submit {
        background-color: #007bff;
    }

        .submit:hover {
            background-color: #0056b3;
        }

    .password-toggle-button {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
    }

        .password-toggle-button:hover {
            opacity: 0.8;
        }

        .password-toggle-button:focus {
            outline: none;
        }

        .password-toggle-button i {
            color: #007bff;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        .password-toggle-button:hover i {
            color: #0056b3;
        }

    .password-toggle-button {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
    }

        .password-toggle-button:hover {
            opacity: 0.8;
        }

        .password-toggle-button:focus {
            outline: none;
        }

        .password-toggle-button i {
            color: #007bff;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        .password-toggle-button:hover i {
            color: #0056b3;
        }
    
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var togglePasswordButton = document.getElementById('togglePassword');
        var passwordInput = document.getElementById('contrasenia');
        var eyeIcon = document.getElementById('eyeIcon');

        togglePasswordButton.addEventListener('click', function () {
            togglePasswordVisibility(passwordInput, eyeIcon);
        });

        var togglePasswordButton2 = document.getElementById('togglePassword2');
        var passwordInput2 = document.getElementById('contrasenia2');
        var eyeIcon2 = document.getElementById('eyeIcon2');

        togglePasswordButton2.addEventListener('click', function () {
            togglePasswordVisibility(passwordInput2, eyeIcon2);
        });
    });

    function togglePasswordVisibility(passwordInput, eyeIcon) {
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.classList.remove('fa-eye');
            eyeIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            eyeIcon.classList.remove('fa-eye-slash');
            eyeIcon.classList.add('fa-eye');
        }
    }
</script>
</head>

<div>
    <form method="post">
        <fieldset>
            <legend>Cambio de contraseña</legend>
          
            <div>
                <label for="contrasenia">Introduzca su nueva contraseña</label>
                <input type="password" name="contrasenia" id="contrasenia" value="" placeholder="Clave de acceso" maxlength="16" required>
                <button type="button" id="togglePassword" class="password-toggle-button">
                    <i id="eyeIcon" class="fas fa-eye"></i>
                </button>
            </div>
            <br />
            <div>
                <label for="valContrasenia">Repetir clave</label>
                <input type="password" name="contrasenia2" value="" id="contrasenia2" placeholder="Repetir clave" maxlength="16" required>
                <button type="button" id="togglePassword2" class="password-toggle-button">
                    <i id="eyeIcon2" class="fas fa-eye"></i>
                </button>
            </div>

            <br />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }
            <div>
                <button type="submit" asp-page-handler="Submit" class="submit">Registrar</button>
            </div>
            <hr />
        </fieldset>
    </form>
</div>

</html>


