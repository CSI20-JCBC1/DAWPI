@page
@model DAWPI.Pages.Login.VerificacionCodigoModel
@{ 
    ViewData["Title"] = "Verificar código";
}



<!DOCTYPE html>
<html>
<head>
    <title>Enviar código de recuperación</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
   
</head>
<body style="background-color: #f3f3f3; font-family: Arial, sans-serif;">
    <div style="text-align: center; padding: 20px; background-color: #fff; border-radius: 5px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); max-width: 400px; margin: 0 auto;">
        <h1 style="color: #333; margin-bottom: 20px;">Verificación de código</h1>
        <p style="margin-bottom: 30px;">Por favor, introduzca su código de verificación.</p>

        <form method="post" style="display: flex; justify-content: center; align-items: center; flex-direction: column; text-align: center;">
            <div>
                <label for="Codigo" style="display: block; font-weight: bold; margin-bottom: 4px; color: #007bff;">Código</label>
                <input type="text" name="Codigo" placeholder="Código" style="padding: 12px; margin-bottom: 12px; border: none; border-bottom: 1px solid #ccc; border-radius: 4px; background-color: #f8f9fa; width: 100%;" required />
            </div>
            
            <hr />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 8px 12px; border-radius: 4px; margin-top: 16px; text-align: left;">
                    <ul style="margin: 0;">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }
            <div>
                <button type="submit" asp-page-handler="Submit" class="submit" style="padding: 12px 24px; background-color: #007bff; color: #fff; font-weight: bold; border: none; border-radius: 4px; cursor: pointer; transition: background-color 0.3s ease;">Enviar</button>
            </div>
        </form>
    </div>
    
</body>

</html>

