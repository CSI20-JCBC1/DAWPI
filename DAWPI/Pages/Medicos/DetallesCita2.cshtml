@page
@model DAWPI.Pages.Medicos.DetallesCita2Model
@{
}
<style>
    .details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
    }

        .details-table th,
        .details-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }

        .details-table th {
            text-align: left;
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .details-table td input[type="date"],
        .details-table td input[type="time"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

    .details-buttons {
        margin-top: 20px;
        text-align: right;
    }

        .details-buttons button {
            padding: 10px 20px;
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            .details-buttons button:hover {
                background-color: #45a049;
            }
</style>

<div class="details-container">
    <h1>Detalles de la Cita</h1>
    <form method="post">
        <table class="details-table">
            <tr>
                <th>Asunto:</th>
                <td>@Model.Cita.Asunto</td>
            </tr>
            <tr>
                <th>Nombre del Paciente:</th>
                <td>@Model.Cita.NombrePaciente</td>
            </tr>
            <tr>
                <th>Síntomas:</th>
                <td>@Model.Cita.Sintomas</td>
            </tr>
            <tr>
                <th>Planta:</th>
                <td>@Model.Cita.CodPlanta</td>
            </tr>
            <tr>
                <th>Sala:</th>
                <td>@Model.Cita.CodSala</td>
            </tr>
            <tr>
                <th>Fecha:</th>
                <td>@Model.Cita.Fecha</td>
            </tr>
            <tr>
                <th>Hora:</th>
                <td>@Model.Cita.Hora</td>
            </tr>
            <tr>
                <th>Enfermedad:</th>
                <td><input type="text" name="enfermedad" id="enfermedad" required /></td>
            </tr>
            <tr>
                <th>Solución:</th>
                <td colspan="2">
                    <textarea name="solucion" id="solucion" required style="width: 100%; height: auto;"></textarea>
                </td>
            </tr>

        </table>
        <br />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="details-buttons">
            <button asp-page-handler="Diagnosticar" type="submit" style="background-color: #4CAF50; color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer; font-size: 16px;">Enviar</button>
        </div>
    </form>
</div>
