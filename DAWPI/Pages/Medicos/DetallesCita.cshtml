@page
@model DAWPI.Pages.Medicos.DetallesCitaModel
@{
    ViewData["Title"] = "Detalles de la Cita";
}

<style>
    .details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
    }

        .details-table th,
        .details-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }

        .details-table th {
            text-align: left;
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .details-table td input[type="date"],
        .details-table td input[type="time"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

    .details-buttons {
        margin-top: 20px;
        text-align: right;
    }

        .details-buttons button {
            padding: 10px 20px;
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            .details-buttons button:hover {
                background-color: #45a049;
            }
</style>

<div class="details-container">
    <h1>Detalles de la Cita</h1>

    @if (Model.Cita.EstadoCita == "PFH")
    {
        <form method="post">
            <table class="details-table">
                <tr>
                    <th>Asunto:</th>
                    <td>@Model.Cita.Asunto</td>
                </tr>
                <tr>
                    <th>Nombre del Paciente:</th>
                    <td>@Model.Cita.NombrePaciente</td>
                </tr>
                <tr>
                    <th>Síntomas:</th>
                    <td>@Model.Cita.Sintomas</td>
                </tr>
                <tr>
                    <th>Planta:</th>
                    <td>@Model.Cita.CodPlanta</td>
                </tr>
                <tr>
                    <th>Sala:</th>
                    <td>@Model.Cita.CodSala</td>
                </tr>
                <tr>
                    <th>Hora:</th>
                    <td><input type="time" name="hora" value="@Model.Cita.Hora?.ToString("HH:mm")" /></td>
                </tr>
                <tr>
                    <th>Fecha:</th>
                    <td><input type="date" name="fecha" value="@Model.Cita.Fecha?.ToString("yyyy-MM-dd")" /></td>
                </tr>
            </table>

            <div class="details-buttons">
                <button type="submit">Guardar Cambios</button>
            </div>
        </form>
    }
</div>
