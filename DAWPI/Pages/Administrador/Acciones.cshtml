@page
@model DAWPI.Pages.Administrador.AccionesModel
@{
    ViewData["Title"] = "Acciones";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .header {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 230px;
            background-color: rgba(76, 175, 80, 0.8); /* Agrega transparencia al fondo del encabezado */
            color: #fff;
            border-radius: 10px;
            text-align: center;
        }

            .header h1 {
                font-size: 2rem;
                margin: 0 0 0.5rem 0;
            }

        
            

            .header p {
                font-size: 1.5rem;
                margin: 0;
            }


        .clock {
            font-size: 1.5rem;
            color: #FFF;
            margin-top: 1rem;
            margin-bottom: 1.5rem;
            text-shadow: 1px 1px 2px #4CAF50;
            font-family: 'Lato', sans-serif; 
        }

            .clock span {
                font-size: 1.5rem;
                color: #fff;
                margin-left: 0.5rem;
                font-weight: 300; 
            }

            .clock .hour {
                font-size: 3rem;
                font-weight: 700; 
            }

            .clock .date {
                font-size: 1.5rem;
                font-weight: 300;
            }

        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 200px);
            background-color: rgba(255, 255, 255, 0.8); /* Agrega transparencia al fondo del contenedor */
            border-radius: 10px; /* Agrega bordes redondeados al contenedor */
        }

        .button {
            font-size: 2rem;
            padding: 1rem 2rem;
            border: none;
            border-radius: 5px;
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
            cursor: pointer;
            margin: 0 1rem;
        }

        .button1 {
            background-color: #1B4E8C;
            color: #fff;
        }

        .button2 {
            background-color: #4CAF50;
            color: #fff;
        }
    </style>


    <script>
        function updateTime() {
            const now = new Date();
            const hour = now.getHours();
            const minute = now.getMinutes();
            const second = now.getSeconds();
            const day = now.getDate();
            const month = now.getMonth() + 1;
            const year = now.getFullYear();

            const hourString = ('0' + hour).slice(-2);
            const minuteString = ('0' + minute).slice(-2);
            const secondString = ('0' + second).slice(-2);
            const dayString = ('0' + day).slice(-2);
            const monthString = ('0' + month).slice(-2);

            document.getElementById('clock').innerHTML = `
                    <span class="hour">${hourString}:${minuteString}</span>
                    <span>${secondString}</span>
                    <br>
                    <span class="date">${dayString}/${monthString}/${year}</span>
                `;
        }

        // Actualizar el reloj cada segundo
        setInterval(updateTime, 1000);

        // Mostrar la hora actual al cargar la página
        updateTime();
    </script>
</head>
<body>
    <div class="header">
        <br />
        <h1>Hola @Model.UsuarioDTO.NombreCompleto, Bienvenido al panel de administración</h1>
        <p>Por favor, seleccione una opción:</p>
        <div class="clock" id="clock"></div>
    </div>

    <div class="form-container">
        <form method="post">
            <div>
                <button asp-page-handler="Pacientes" type="submit" class="button button1">Pacientes</button>
                <button asp-page-handler="Medicos" type="submit" class="button button2">Médicos</button>
            </div>
        </form>
    </div>


</body>
</html>

